{
    "name": "nomolink",
    "version": "1.0.11",
    "description": "Nomolink",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "fetch": "rimraf tools firmwares && node script/download-tools.js && node script/download-firmwares.js",
        "start-server": "node test/start-server.js --log-level=info",
        "deploy:all": "electron-builder --mac --win -p always",
        "deploy:mac": "electron-builder --mac -p always",
        "deploy:win": "electron-builder --win -p always",
        "build": "electron-builder"
    },
    "repository": "https://github.com/Xart22/nomo-link",
    "publish": {
        "provider": "github",
        "releaseType": "release"
    },
    "build": {
        "appId": "com.nomolink.desktop",
        "productName": "Nomolink",
        "asar": false,
        "win": {
            "publish": [
                "github"
            ],
            "target": [
                "nsis"
            ],
            "icon": "assets/icons/icon.ico"
        },
        "mac": {
            "category": "public.app-category.tools",
            "gatekeeperAssess": true,
            "hardenedRuntime": true,
            "icon": "assets/icons/512.png",
            "provisioningProfile": "embedded.provisionprofile",
            "publish": [
                "github"
            ],
            "target": {
                "target": "default",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        },
        "nsis": {
            "artifactName": "Nomolink-setup-${version}.${ext}",
            "oneClick": true,
            "uninstallDisplayName": "Nomolink-uninstaller",
            "installerIcon": "assets/icons/icon.ico",
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Nomolink",
            "runAfterFinish": true,
            "include": "build/installer.nsh",
            "perMachine": false
        }
    },
    "author": "Sonasoft",
    "license": "ISC",
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "electron": "^26.2.1",
        "electron-builder": "^23.3.3",
        "eslint": "^5.3.0",
        "eslint-config-scratch": "^5.0.0",
        "jsdoc": "^3.6.6",
        "rimraf": "^3.0.2"
    },
    "dependencies": {
        "@abandonware/noble": "^1.9.2-10",
        "@serialport/parser-readline": "^10.5.0",
        "ansi-string": "^0.2.1",
        "axios": "^1.1.3",
        "cli-color": "^2.0.1",
        "download-github-release": "^0.3.2",
        "electron-log": "^4.4.8",
        "electron-updater": "^6.1.4",
        "extract-zip": "^2.0.1",
        "fs": "^0.0.1-security",
        "https": "^1.0.0",
        "install": "^0.13.0",
        "js-yaml": "^4.0.0",
        "kill-port": "^2.0.1",
        "node-fetch": "^2.6.7",
        "node-gyp": "^9.2.0",
        "nodejs-file-downloader": "^4.10.2",
        "port": "^0.8.1",
        "serialport": "^10.5.0",
        "usb": "^2.11.0",
        "ws": "^7.1.1"
    }
}
